<div id="<%= dom_id project %>" class="border rounded p-3 mb-3 bg-light">
  <%= link_to "View Project", project_path(project), class: "float-end btn btn-outline-primary" %>
  <p class="lead mb-0"><%= link_to project.name, project_path(project), class: "text-dark text-decoration-none" %></p>
  <%= content_tag :p, truncate(project.description, length: 50), class: "text-muted" %>
</div>
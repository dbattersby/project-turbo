<div id="<%= dom_id task %>" class="border-bottom p-3 mb-3">
  <div class="float-end text-end">
    <%= button_to "Mark as Complete", project_task_complete_path(task.project_id, task), data: { turbo_method: :post }, class: "btn btn-sm btn-outline-secondary mb-2" unless task.complete? %>
    <%= link_to "Delete Task", project_task_path(task.project_id, task), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?" }, class: "text-secondary small" %>
  </div>
  <p class="lead mb-0"><%= task.name %> (<%= task.status.titleize %>)</p>
  <%= content_tag :p, truncate(task.description, length: 50), class: "text-muted" %>
</div>